<% f = local_assigns[:f] %>

<div class="row">
  <div class="col-md-6">
    <div>
      <h3>Team 1</h3>
      <% p1 = Player.find(params[:p1]) if params[:p1] %>
      <% p1 ||= current_player %>
      <%= f.label :team_1_player_1, "Player" %> <%= player_select(:team_1_player_1, @player_list, p1) %>
      <%#= f.label :team_1_player_2 %> <%#= player_select(:team_1_player_2, @player_list) %>
      <%= f.label :game_1_score_1, 'Game 1 Score' %> <%= f.text_field(:game_1_score_1, type: 'number', min: 0, max: @match.max_score, tabindex: 1) %>
      <%= f.label :game_2_score_1, 'Game 2 Score' %> <%= f.text_field(:game_2_score_1, type: 'number', min: 0, max: @match.max_score, tabindex: 3) %>
      <%= f.label :game_3_score_1, 'Game 3 Score' %> <%= f.text_field(:game_3_score_1, type: 'number', min: 0, max: @match.max_score, tabindex: 5) %>
    </div>
  </div>
  <div class="col-md-6">
    <h3>Team 2</h3>
    <% p2 = Player.find(params[:p2]) if params[:p2] %>
    <%= f.label :team_2_player_1, "Player" %> <%= player_select(:team_2_player_1, @player_list, p2) %>
    <%#= f.label :team_2_player_2 %> <%#= player_select(:team_2_player_2, @player_list) %>
    <%= f.label :game_1_score_2, 'Game 1 Score' %> <%= f.text_field(:game_1_score_2, type: 'number', min: 0, max: @match.max_score, tabindex: 2) %>
    <%= f.label :game_2_score_2, 'Game 2 Score' %> <%= f.text_field(:game_2_score_2, type: 'number', min: 0, max: @match.max_score, tabindex: 4) %>
    <%= f.label :game_3_score_2, 'Game 3 Score' %> <%= f.text_field(:game_3_score_2, type: 'number', min: 0, max: @match.max_score, tabindex: 6) %>
  </div>
</div>

<%= f.submit 'Submit', class: 'button btn-edit fi-check' %>
<%= cancel_button('matches') %>
