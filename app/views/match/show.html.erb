<%= get_header(@match.datestr) %>
<%= edit_button('match', @match) %>
<h2>Match: <%= @match.datestr %></h2>
<table>
  <thead>
    <tr>
      <th>Team 1</th>
      <th>Team 2</th>
      <th>Game 1</th>
      <th>Game 2</th>
      <th>Game 3</th>
    </tr>
  </thead>
  <tbody>
    <td>
      <ul <%= "class='winner'".html_safe if @match.is_winner?(@match.team_1) %>>
        <%= content_tag(:li, link_to(@match.team_1_player_1.name, @match.team_1_player_1)) if @match.team_1_player_1 %>
        <%= content_tag(:li, link_to(@match.team_1_player_2.name, @match.team_1_player_2)) if @match.team_1_player_2 %>
      </ul>
    </td>
    <td>
      <ul <%= "class='winner'".html_safe if @match.is_winner?(@match.team_2) %>>
        <%= content_tag(:li, link_to(@match.team_2_player_1.name, @match.team_2_player_1)) if @match.team_2_player_1 %>
        <%= content_tag(:li, link_to(@match.team_2_player_2.name, @match.team_2_player_2)) if @match.team_2_player_2 %>
      </ul>
    </td>
    <td><%= @match.game_1_score_1 %> - <%= @match.game_1_score_2 %></td>
    <td><%= @match.game_2_score_1 %> - <%= @match.game_2_score_2 %></td>
    <% if @match.game_3 %>
      <td><%= @match.game_3_score_1 %> - <%= @match.game_3_score_2 %></td>
    <% else %>
      <td></td>
    <% end %>
  </tbody>
</table>
